|udp6send|udpclose|udpopen|udpsend|uncompile|unescape_url|unparse_ansi|unparse_ansi|unparselock|unparseobj|use|version|}array|}cat|}dict|}join|}list|}tell'
contexts:
  prototype: 
    - include: comment
    - include: constants

  main:
    - match: \$(define|include|author|version|lib-version|def|enddef)
      scope: keyword.preprocessor.muf 
    - match: ':'
      scope: keyword.operator.muf
      push: procedure-name
  comment:
    - match: '\('
      scope: punctuation.comment.begin.muf
      push:
      - meta_scope: comment.block.muf
      - match: '\)'
        scope: punctuation.comment.end.muf
        pop: true
  procedure-name:
    - match: '\b([a-zA-Z][a-zA-Z0-9]*)\b'
      scope: entity.name.function.muf
      set: procedure-body
  control-keywords:
    - match: \bif\b
      scope: keyword.control.conditional.muf
      push:
        - meta_scope: meta.block.muf
        - include: expression
        - match: \belse\b
          scope: keyword.control.conditional.muf
        - match: \bthen\b
          scope: keyword.control.conditional.muf
          pop: true
    - match: '\b(begin|for(?:each)?)\b'
      scope: keyword.control.muf
      push:
        - meta_scope: meta.block.muf
        - include: expression
        - match: \b(until|repeat)\b
          scope: keyword.control.muf
          pop: true
        - match: '\b(while|break|continue)\b'
          scope: keyword.control.muf
  constants:
    - match: '#[0-9]+'
      scope: constant.other.placeholder.muf
    - match: '[0-9]+(?:\.[0-9]*)?'
      scope: constant.numeric.muf
    - match: '"'
      push:
        - meta_scope: string.quoted.double.muf
        - meta_include_prototype: false
        - match: '"'
          pop: true

  operator:
    - match: '\s+({{oper}})\s+'
      scope: keyword.operator.arithmetic.muf

  support:
    - match: \b({{prims1}}|{{prims2}}|{{prims3}}|{{primsrest}})\b
      scope: support.function.muf
  expression:
    - include: operator
    - include: control-keywords 
    - include: support
    - include: constants

  procedure-body:
    - meta_scope: meta.function.muf meta.block.muf 
    - include: expression
    - match: \;
      scope: punctuation.section.block.end.muf
      pop: true